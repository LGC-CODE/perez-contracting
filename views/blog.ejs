<!-- Home section -->
<ui-view></ui-view>
<script type="text/ng-template" id="/home.html">
	<section class="blog">
		<div class="blog-content">
			<div ng-repeat="article in articles" class=" col-md-6 col-sm-6 blog-box">
				<div class="blog-body">
					<img src="{{ article.img0 }}">
					<h1>{{ article.title }}</h1>
				  	<a class="btn btn-success" href="/blog/single/#!/home/{{ article._id }}">View Article</a>
				  	<p style="cursor: default;" class="btn btn-success pull-right">
						<span ng-show="!article.isLiked" style="color: white; cursor: pointer;" ng-click="incrementUpvotes(article)" class="fa fa-thumbs-up"></span>
						<span ng-show="article.isLiked" style="color: blue; cursor: pointer;" ng-click="decrementUpvotes(article)" class="fa fa-thumbs-up"></span>
						Likes {{ article.upvotes }}
					</p>
				</div>
			</div>
		</div>
	</section>
</script>




